	<% @comments.each do |comment| %>
	  <div class="panel panel-primary">
	  	<div class="panel-heading">
				<%= comment.user.name %>
				<%= link_to 'Delete', picture_comment_path(@picture, comment), class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: "Are you sure?"} if comment.user.id == current_user.id %>
			</div>
			<div class="panel-body">
				<%= comment.text %>
			</div>
		</div>
	<% end %>

<div class="row">
	<div class="col-sm-12">
		<%= simple_form_for [@picture, @picture.comments.new] do |f|%>
		  <div class="form-inputs">
		  	<%= f.input :text, placeholder: 'Add a comment...' %>
		  </div>
		  <div class="form-inputs">
		  	<%= f.input :rating, collection: 1..5 %>
		  </div>

		  <div class="form-group text-center">
		  	<%= f.button :submit %>
		  </div>
		<% end %>
	</div>
</div>
